
.header
    .container
        include macros/logo

        .header__wrap
            .header__wrap-row.block_skew

            include macros/nav

            a(href="javascript:void(0);", class="btn-mobile", title="burger button")
                span.btn-mobile__line

            include macros/slogan


            .maps-arrow
                i.maps-arrow__icon

                p.maps-arrow__title!= !EN ? "Киев" : "Kyiv"

