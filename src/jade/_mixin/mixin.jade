//- HEAD
mixin headSite(titleName, styleFile, arrFontName)
    head
        //- META TAGS
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=0, height=device-height")
        meta(http-equiv="x-ua-compatible" content="ie=edge")

        //- TITLE
        title!= titleName

        //- FAVICON
        link(rel="icon" type="image/png" href="./img/favicon.png")

        //- LINK CSS
        - for(var i = 0, styleFileLength = styleFile.length; i < styleFileLength; i++)
            link(href= styleFile[i], rel="stylesheet")

        //- LINK FONTS
        - for(var j = 0, arrFontNameLength = arrFontName.length; j < arrFontNameLength; j++)
            link(href= arrFontName[j], rel='stylesheet')


//- SPONSOR/PARTNER
mixin imgSponsorPartner(count, imgName)
    - for(var i = 0; i < count; i++)
        .partner__row
            - for(var j = 0; j < 4; j++)
                .img__wrap
                    img(src="./img/" + imgName[j], class="img-sponsorRarther")
                if(j < 3)
                    i.sponsor__line.block_skew
